<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/setLibre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Libre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/setReservado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reservado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setLibre" />

    <Button
        android:id="@+id/setComprado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comprado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setReservado" />

    <Button
        android:id="@+id/setContruido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contruido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setComprado" />
</androidx.constraintlayout.widget.ConstraintLayout>